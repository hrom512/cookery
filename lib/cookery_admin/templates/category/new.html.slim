.portlet
  .portlet-title
    .caption
      .page-title
      = dgettext "admin.categories", "New Category"
    .actions
      a.btn.btn-sm.btn-circle.btn-default href=category_path(@conn, :index)
        i.fa.fa-arrow-left
        | &nbsp;
        = dgettext "admin", "Back to list"

  .portlet-body.form
    = render "form.html", Map.put(assigns, :action, category_path(@conn, :create))
