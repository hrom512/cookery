.portlet
  .portlet-title
    .caption
      .page-title
        = @recipe.title
    .actions
      a.btn.btn-sm.btn-circle.btn-default href=recipe_path(@conn, :index)
        i.fa.fa-arrow-left
        | &nbsp;
        = gettext "Back to list"
      | &nbsp;
      a.btn.btn-sm.btn-circle.blue href=recipe_path(@conn, :edit, @recipe)
        i.fa.fa-edit
        | &nbsp;
        = gettext "Edit"

  .portlet-body
    table.table.table-hover.table-light
      tr
        td = dgettext "recipes", "Title"
        td = @recipe.title
      tr
        td = dgettext "recipes", "Description"
        td = @recipe.description
      tr
        td = dgettext "recipes", "Categories"
        td = recipe_categories(@recipe)
      tr
        td = dgettext "recipes", "User"
        td = @recipe.user.login
      tr
        td = dgettext "recipes", "Created"
        td = @recipe.inserted_at |> format_datetime(@current_timezone)
