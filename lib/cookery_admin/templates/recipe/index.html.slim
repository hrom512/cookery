.portlet
  .portlet-title
    .caption
      .page-title = dgettext "recipes", "Listing Recipes"
    .actions
      a.btn.btn-sm.btn-circle.green href=recipe_path(@conn, :new)
        i.fa.fa-plus
          | &nbsp;
          = dgettext "recipes", "New Recipe"

  .portlet-body
    table.table.table-hover.table-light
      thead
        tr.uppercase
          th = dgettext "recipes", "Title"
          th = dgettext "recipes", "Description"
          th = dgettext "recipes", "User"
          th = dgettext "recipes", "Created"
          th
      tbody
        = for recipe <- @recipes do
          tr
            td = recipe.title
            td = recipe.description
            td = recipe.user.login
            td = recipe.inserted_at |> format_datetime(@current_timezone)

            td.text-right
              a.btn.btn-xs.btn-outline.btn-circle.green href=recipe_path(@conn, :show, recipe)
                i.fa.fa-eye
                | &nbsp;
                = gettext "Show"
              a.btn.btn-xs.btn-outline.btn-circle.blue href=recipe_path(@conn, :edit, recipe)
                i.fa.fa-edit
                | &nbsp;
                = gettext "Edit"
              = link gettext("Delete"), to: recipe_path(@conn, :delete, recipe),
                  method: "delete", data: [confirm: gettext("Are you sure?")],
                  class: "btn btn-xs btn-outline btn-circle red"


